{
  "name": "rgb_strip",
  "version": "0.1.0",
  "description": "RGB Strip",
  "repository": {
    "type": "git",
    "url": "https://github.com/csudcy/rgb_strip/"
  },
  "scripts": {
    "check:imports": "poetry run isort --gitignore .",
    "check:style": "poetry run yapf -vv -r -i .",
    "check:types": "poetry run pytype --config=pytype.cfg",
    "check": "npm run check:imports && npm run check:style && npm run check:types",
    "image-server:poetry:install": "cd RGBImageDisplay && poetry install",
    "image-server:poetry:export": "cd RGBImageDisplay && poetry export --format=requirements.txt --without-hashes > requirements.txt",
    "image-server": "cd RGBImageDisplay && poetry run python main.py",
    "poetry:install": "poetry install",
    "poetry:install:spi": "poetry install -E spi",
    "poetry:update": "poetry update && poetry export --format=requirements.txt --without-hashes > requirements.txt",
    "serve": "poetry run python -m RGBStrip server",
    "serve:test": "poetry run python -m RGBStrip server ./configs/test.yaml",
    "tree:render": "poetry run python -m RGBStrip render ./tree/render.yaml ./tree/renders/",
    "tree:render:png": "poetry run python -m RGBStrip render ./tree/render.yaml ./tree/image_renders/ --png",
    "tree:render:serve": "poetry run python -m RGBStrip server ./tree/render.yaml",
    "tree:serve": "poetry run python -m RGBStrip server ./tree/display.yaml"
  },
  "author": "Nicholas Lee <csudcy@gmail.com>",
  "devDependencies": {},
  "dependencies": {}
}
